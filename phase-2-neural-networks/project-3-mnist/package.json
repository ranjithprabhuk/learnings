{
  "name": "mnist-classifier",
  "version": "1.0.0",
  "description": "MNIST Handwritten Digit Recognition with TensorFlow.js",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "demo": "npm run build && node dist/demo.js",
    "demo:simple": "npm run build && node dist/demo-simple.js",
    "demo:train": "npm run build && node dist/demo-train.js",
    "demo:predict": "npm run build && node dist/demo-predict.js",
    "demo:visualize": "npm run build && node dist/demo-visualize.js",
    "demo:evaluate": "npm run build && node dist/demo-evaluate.js",
    "watch": "tsc --watch"
  },
  "keywords": [
    "mnist",
    "neural-network",
    "deep-learning",
    "tensorflow",
    "image-classification",
    "machine-learning"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@tensorflow/tfjs": "^4.22.0",
    "node-fetch": "^2.7.0"
  }
}
